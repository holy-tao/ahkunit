{
  "name": "ahkunit",
  "displayName": "AHKUnit",
  "description": "Unit test support for AutoHotkey V2",
  "categories": [
    "Testing"
  ],
  "keywords": [
    "vscode",
    "autohotkey",
    "ahk",
    "ahk2",
    "test"
  ],
  "publisher": "holy-tao",
  "license": "See license in LICENSE",
  "preview": true,
  "homepage": "https://github.com/holy-tao/ahkunit/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/holy-tao/ahkunit/issues"
  },
  "galleryBanner": {
    "color": "#00769D",
    "theme": "dark"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/holy-tao/ahkunit"
  },
  "version": "0.2.4",
  "engines": {
    "vscode": "^1.108.0"
  },
  "main": "./out/extension.js",
  "files": [
    "out/*.js",
    "templates/",
    "CHANGELOG.md",
    "LICENSE",
    "README.md"
  ],
  "contributes": {
    "configuration": {
      "title": "AHK Test Runner",
      "properties": {
        "ahkunit.executablePath": {
          "type": "string",
          "default": "C:\\Program Files\\AutoHotkey\\v2\\AutoHotkey64.exe",
          "description": "Path to AutoHotkey executable"
        },
        "ahkunit.testFileGlob": {
          "type": "string",
          "default": "**/*.test.ahk",
          "description": "Glob pattern used to identify test files"
        },
        "ahkunit.enabledWarnings": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "VarUnset",
              "LocalSameAsGlobal",
              "Unreachable"
            ],
            "enumDescriptions": [
              "Shown when a variable is used which may be unset.",
              "Shown for each undeclared local variable which has the same name as a global variable.",
              "Shown for each line that immediately follows a Return, Break, Continue, Throw or Goto at the same nesting level, unless that line is the target of a label."
            ],
            "uniqueItems": true
          },
          "default": [
            "VarUnset",
            "Unreachable"
          ],
          "markdownDescription": "The list of [warnings](https://www.autohotkey.com/docs/v2/lib/_Warn.htm) to enable for test methods. If any violations are found, they are displayed in the test output."
        },
        "ahkunit.failOnWarnings": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Whether or not a test should fail if any warnings are produced. You can configure warnings above with the `enabledWarnings` setting."
        }
      }
    }
  },
  "activationEvents": [
    "workspaceContains:**/*.ahk",
    "workspaceContains:**/*.ahk2"
  ],
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
